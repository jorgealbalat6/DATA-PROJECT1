FROM python:3.12-slim

WORKDIR /app

COPY requirements.txt .

RUN apt-get update && \
    apt-get install -y default-jdk wget && \
    apt-get clean;
RUN mkdir -p /app/jars && \
    wget -O /app/jars/postgresql-42.6.0.jar https://jdbc.postgresql.org/download/postgresql-42.6.0.jar
RUN pip install --no-cache-dir -r requirements.txt

COPY --chmod=755 ejecutar.sh .
RUN sed -i 's/\r$//' ejecutar.sh

CMD ["./ejecutar.sh"]


